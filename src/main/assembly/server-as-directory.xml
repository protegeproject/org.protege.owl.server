<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distribution</id>
  <formats>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/resources/server-template</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>commons-cli:commons-cli:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.apache.felix:org.apache.felix.main:jar</include>
      </includes>
      <outputFileNameMapping>felix.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.apache.felix:org.apache.felix.main:jar</include>
      </includes>
      <outputFileNameMapping>felix.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>edu.stanford.protege:ProtegeLauncher:jar</include>
      </includes>
      <outputFileNameMapping>ProtegeLauncher.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.apache.felix:org.apache.felix.configadmin:jar</include>
        <include>org.apache.felix:org.apache.felix.log:jar</include>
        <include>org.apache.felix:org.apache.felix.metatype:jar</include>
        <include>org.apache.felix:org.apache.felix.scr:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>bundles</outputDirectory>
    </dependencySet>

    <dependencySet>
      <includes>
        <include>net.sourceforge.owlapi:owlapi-distribution:jar</include>
      </includes>
      <outputFileNameMapping>org.semanticweb.owl.owlapi.jar</outputFileNameMapping>
      <outputDirectory>bundles</outputDirectory>
    </dependencySet>
    
    <dependencySet>
      <includes>
        <include>net.sourceforge.owlapi:binaryowl:jar</include>
      </includes>
      <outputFileNameMapping>org.semanticweb.owl.binaryowl.jar</outputFileNameMapping>
      <outputDirectory>bundles</outputDirectory>
    </dependencySet> 

  </dependencySets>
  <files>
    <file>
      <source>target/${project.build.finalName}.jar</source>
      <outputDirectory>bundles</outputDirectory>
      <destName>org.protege.owl.server.jar</destName>
    </file>
    <file>
      <source>src/main/resources/logging.properties</source>
      <outputDirectory>.</outputDirectory>
      <destName>logging.properties</destName>
    </file>
  </files>
</assembly>
